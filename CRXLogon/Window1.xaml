        </ImageBrush>
    </Window.Background>
    <Grid>
        <TextBlock TextAlignment="Center" Style="{StaticResource MaterialDesignBody2TextBlock}" Margin="33,63,33,143" Foreground="#FAB90A"><Run Text="Verbund"/><Run Text="en"/></TextBlock>
        <Button Style="{StaticResource MaterialDesignRaisedDarkButton}" Click="Button_Click" Background="#262933" Foreground="White" Content="Trennen" VerticalAlignment="Top" Margin="93,163,93,0"  Width="106"/>
    </Grid>
</Window>
